<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="discovery"
			android:textAllCaps="false"
			android:onClick="discoverDevice"/>

		<EditText
			android:id="@+id/get_uid"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="uid"/>

		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="connect"
			android:textAllCaps="false"
			android:onClick="connect"/>
	</LinearLayout>
    
	<LinearLayout android:orientation="horizontal" 		
	    android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
		    android:text="UID:"/>
		<EditText android:layout_width="240dp" android:layout_height="wrap_content"
			android:id="@+id/edt_uid" android:singleLine="true" 
			android:hint="Please enter the UID!" android:gravity="center"
			android:capitalize="characters" android:maxLength="20"/>
		<Button android:layout_width="85dp" android:layout_height="wrap_content"
			android:id="@+id/btn_start" android:text="@string/title_btn_start2"/>
	</LinearLayout>
	
	<LinearLayout android:orientation="horizontal"
	    android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
		    android:text="        "/>
	    <EditText android:layout_width="240dp"	android:layout_height="wrap_content"  
	        android:lines="1"	android:gravity="center"
	        android:hint="Please enter the text!"
	        android:textSize="14sp" android:id="@+id/edit_string"/>

		<Button android:layout_width="85dp" android:layout_height="wrap_content"
			android:id="@+id/btn_send" android:text="@string/title_btn_send"/>
	</LinearLayout>

	<LinearLayout android:orientation="horizontal" 		
	    android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
		    android:text="IOTCAPIs Ver:" android:textColor="#ffff0000" android:textStyle="bold"/>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:textStyle="bold" android:textColor="#ffff0000"
		    android:id="@+id/txt_api_ver" android:paddingLeft="5dp"/>
	</LinearLayout>
		    
    <TextView android:text="Log:" android:background="#ff808080"
		android:singleLine="true" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	
    <TextView android:id="@+id/txt_log" android:paddingLeft="5dp" android:background="#20ffffff"
		android:scrollbars="vertical" android:singleLine="false" android:maxLines="18"
		android:layout_width="fill_parent" android:layout_height="wrap_content"/>
</LinearLayout>
